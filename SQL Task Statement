Pending Data Point
// Retrive
"SELECT PLocation_Name, DType, Data_Value, DateRecorded FROM DATAPOINT WHERE NOT Accepted;"
// Accept
"UPDATE DATAPOINT SET Accepted = 1 WHERE PLocation_Name = %s AND DateRecorded = %s;", (entries[index][0], entries[index][3])
//Reject
